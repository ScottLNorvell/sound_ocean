 
<div id="user_nav">
	<span id="not-opacity">
	  Exploring as <strong><%= current_user.username %></strong>. | 
	  <%= link_to "Home", root_path %> |
	  <a href="#" id="new-genre" >New Genre</a> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete %> |
	  
	</span>
</div>


<div id="game-container"></div>


<div class="aside" id="playlist-menu">
  <ul class="aside-ul" id="playlist-ul">
    <% if @songs %>
      <% @songs.each do |song| %>
        <li><a class="playlist-track" href="<%= song.url %>" target="_blank"><%= song.artist %> - <%= song.title %></a></li>
      <% end %>
    <% else %>
      <li>No Songs! Swim around and discover some!</li>
    <% end %>
    
  </ul>
</div>
<div class="aside" id="ranking">
  <ul class="aside-ul" id="ranking-ul">

  	Current Score
    <span id="current-user-score">8</span>
    <li id="score-title">Top Discoverers</li>
    <% if @top_users %>
      <% @top_users.each do |user| %>
        <li><%= user.username %> - <%= user.score %></li>
      <% end %>
    <% end %>
  </ul>
</div>
<div id="genre-picker" class="modal">
  <select name="" id="genre-select">
    <option value="folk">folk</option>
    <option value="rock">rock</option>
    <option value="pop">pop</option>
    <option value="indie">indie</option>
    <option value="electronic">electronic</option>
  </select>
  <input type="submit" id="genre-button" class="button-to" value="Pick a genre"/>
</div>

<div id="current-song" class="modal"><span id="current-song-dislay"> 
   This is the song you are listening to!</span>
   <span id="discovered-song-title" >title</span>

  <input type="submit" id="add-button" class="button-to" value="Add to playlist!"/>
  <input type="submit" id="no-thanks" class="button-to" value="No Thanks"/>
</div>

<div id="arrow-keys-modal" class="modal">
  <p>Use the arrow key's to move your avatar</p>
  <p>Use the spacebar for a speed boost</p>
  <p>Navigate offscreen for new discoveries!</p>
</div>

