<div id="signup-box" class="devise-box">
<a href="/" class="ajax-butt"><%= image_tag "sound_ocean.png", :border => 0 %></a>

<h1>Sign up</h1>
<%# resource_class.omniauth_providers.each do |provider| %>
<%# link_to image_tag("btn-connect-sc-l.png", :border => 0), omniauth_authorize_path(resource_name, provider), :class => "sc-button"%><br />
<%# end -%>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-elements">
    <%= f.text_field :username, :placeholder => "Username", :autofocus => true %></div>

    <% if f.object.email_required? %>
    <div class="form-elements">
    <%= f.email_field :email, :placeholder => "music@sea.com", :autofocus => true %></div>
    <% end %>

    <% if f.object.password_required? %>
    <div class="form-elements">
    <%= f.password_field :password, :placeholder => "Best password ever." %></div>

    <div class="form-elements">
    <%= f.password_field :password_confirmation, :placeholder => "Remember it?" %></div>
    <% end %>

    <div class="form-elements"><%= f.submit "Sign up", class: "button-to" %></div>
  <% end %>

  <%= render "devise/shared/links" %>

  <%= link_to "Home", root_path, class: "ajax-butt" %>

</div>