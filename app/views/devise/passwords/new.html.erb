<div id="forgot-password-modal" class="devise-box">
<%= link_to image_tag("sound_ocean.png", :border => 0), class: "sound_ocean" %>	

<h1>Forgot your password?</h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-elements">
  <%= f.email_field :email, :autofocus => true, :placeholder => "sos@sea.com" %></div>

  <div class="form-elements"><%= f.submit "Send me reset password instructions", class: "button-to" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
